/**app.wxss**/
@import '/static/css/iconfont.wxss'; /* 引入 iconfont 的 CSS 文件 */

/* 全局主题颜色变量 */
page {
  --primary-color: #4472C4;
  --primary-light: #5C8BE5;
  --primary-gradient: linear-gradient(135deg, #4472C4, #5C8BE5);
  --text-color: #333333;
  --secondary-text: #666666;
  --light-bg: #f8f9fc;
  --card-bg: #ffffff;
  --border-color: #f0f0f0;
  --highlight-color: #FF4500;
  --success-color: #09BB07;
  --warning-color: #FFB800;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 通用卡片样式 */
.card {
  background-color: var(--card-bg);
  border-radius: 10px;
  margin: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 通用标题样式 */
.card-title {
  padding: 15px;
  border-bottom: 1px solid var(--border-color);
  display: flex;
  align-items: center;
  font-size: 16px;
  font-weight: 500;
  color: var(--text-color);
}

.card-title .iconfont {
  margin-right: 8px;
  color: var(--primary-color);
}

/* 通用按钮样式 */
.btn-primary {
  background-color: var(--primary-color);
  color: white;
  border: none;
  border-radius: 5px;
  padding: 8px 15px;
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
  border-radius: 5px;
  padding: 8px 15px;
}

/* 通用容器样式 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: var(--light-bg);
} 

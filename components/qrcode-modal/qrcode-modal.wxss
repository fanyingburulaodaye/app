.qrcode-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.qrcode-modal-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.qrcode-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.qrcode-modal-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.qrcode-modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.qrcode-modal-body {
  padding: 40rpx;
}

.qrcode-container {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  background-color: #f5f5f5;
}

.qrcode-placeholder {
  width: 400rpx;
  height: 400rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  border: 1rpx dashed #ddd;
}

.qrcode-placeholder-text {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  padding: 0 40rpx;
}

.qrcode-tip {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
} 
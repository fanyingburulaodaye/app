.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.info-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  padding: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.info-group {
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
}

.text-area {
  flex-direction: column;
}

.label {
  width: 240rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.text-area .label {
  margin-bottom: 10rpx;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.text-area .value {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  min-height: 120rpx;
  line-height: 1.5;
}

.empty {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 30rpx;
}

.footer {
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  display: flex;
  justify-content: center;
}

.btn {
  padding: 20rpx 60rpx;
  border-radius: 45rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn {
  background: #4C84FF;
  color: #fff;
}
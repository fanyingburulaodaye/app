.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  overflow: hidden;
}

.card-title {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #4C84FF;
  color: white;
  font-weight: bold;
  font-size: 32rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.card-content {
  padding: 30rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 30rpx;
  display: block;
}

.primary-btn {
  background-color: #4C84FF;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.primary-btn:active {
  background-color: #3A6BCC;
}

.time-input {
  margin: 15rpx 0;
  display: flex;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #333;
  width: 180rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.submit-btn {
  background-color: #FF9800;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.submit-btn:active {
  background-color: #F57C00;
}

.tips {
  background-color: #fff8e1;
  padding: 20rpx;
  border-radius: 8rpx;
  border-left: 8rpx solid #FFC107;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

.time-guide {
  background-color: #f0f8ff;
  padding: 15rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.guide-text {
  font-size: 26rpx;
  color: #0066cc;
  line-height: 1.4;
}

.time-input-group {
  background-color: #f9f9f9;
  padding: 15rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.total-time-input {
  margin: 25rpx 0;
  display: flex;
  align-items: center;
  background-color: #f0f7ff;
  padding: 15rpx;
  border-radius: 8rpx;
  border-left: 8rpx solid #4C84FF;
}

.total-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  width: 180rpx;
}

.total-input {
  flex: 1;
  height: 80rpx;
  border: 1px solid #4C84FF;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #ffffff;
} 
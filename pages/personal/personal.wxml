<!-- 个人主页 -->
<view class="container" style="{{pageStyle}}">
  <view class="menu-list">
    <view class="menu-item" bindtap="onMenuItemTap" data-type="profile">
      <image class="menu-icon" src="/static/image/基础信息.png"></image>
      <view class="menu-text">个人资料</view>
      <view class="arrow">></view>
    </view>
    
    <view class="menu-item" bindtap="onMenuItemTap" data-type="studyRecord">
      <image class="menu-icon" src="/static/image/所处学习阶段-01.png"></image>
      <view class="menu-text">学习记录</view>
      <view class="arrow">></view>
    </view>
    
    <view class="menu-item" bindtap="onMenuItemTap" data-type="planChangeHistory">
      <image class="menu-icon" src="/static/image/异动记录.png"></image>
      <view class="menu-text">异动历史</view>
      <view class="arrow">></view>
    </view>
    
    <view class="menu-item" bindtap="onMenuItemTap" data-type="settings">
      <image class="menu-icon" src="/static/image/课程安排.png"></image>
      <view class="menu-text">设置</view>
      <view class="arrow">></view>
    </view>
    
    <view class="menu-item" bindtap="onMenuItemTap" data-type="focusTimer">
      <image class="menu-icon" src="/static/image/计时器.png"></image>
      <view class="menu-text">专注计时器</view>
      <view class="arrow">></view>
    </view>
    
    <view class="menu-item" bindtap="onMenuItemTap" data-type="contact">
      <image class="menu-icon" src="/static/image/联系我们.png"></image>
      <view class="menu-text">联系我们</view>
      <view class="arrow">></view>
    </view>
    
    <view class="menu-item logout-item" bindtap="onMenuItemTap" data-type="logout">
      <image class="menu-icon" src="/static/image/设置.png"></image>
      <view class="menu-text">退出登录</view>
      <view class="arrow">></view>
    </view>
  </view>
</view>

<!-- 二维码弹窗 -->
<qrcode-modal visible="{{showQRCode}}" bind:close="onQRCodeClose"></qrcode-modal> 
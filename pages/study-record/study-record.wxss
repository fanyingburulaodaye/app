/* 页面容器 */
.container {
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #f6f7fb;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 搜索框样式 */
.search-container {
  margin-bottom: 30rpx;
}

.search-wrapper {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  height: 60rpx;
  margin-left: 16rpx;
  font-size: 28rpx;
}

.clear-icon {
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-tips {
  font-size: 24rpx;
  color: #999;
}

/* 课程列表样式 */
.course-list {
  margin-bottom: 40rpx;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.course-info {
  flex: 1;
  margin-right: 20rpx;
}

.course-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.course-date {
  font-size: 24rpx;
  color: #4C84FF;
  background-color: rgba(76, 132, 255, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
}

.course-module {
  font-size: 24rpx;
  color: #666;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.course-tips {
  font-size: 26rpx;
  color: #888;
  line-height: 1.4;
}

.course-status {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.completed-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 6rpx;
}

.status-text {
  font-size: 22rpx;
  color: #52c41a;
}

/* 底部提示 */
.footer-tips {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
} 
.container {
  padding: 20rpx;
  background-color: var(--light-bg);
  min-height: 100vh;
}

.section {
  margin-bottom: 30rpx;
  background-color: var(--card-bg);
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
  position: relative;
}

.header-left {
  display: flex;
  align-items: center;
  width: 40%;
}

.header .iconfont {
  margin-right: 10rpx;
  font-size: 40rpx;
  color: var(--primary-color);
}

.header .title {

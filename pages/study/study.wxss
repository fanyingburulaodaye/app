.container {
  padding: 20rpx;
  background-color: var(--light-bg);
  min-height: 100vh;
}

.section {
  margin-bottom: 30rpx;
  background-color: var(--card-bg);
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
}

.header .iconfont {
  margin-right: 10rpx;
  font-size: 40rpx;
  color: var(--primary-color);
}

.header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}

/* 学习阶段表格样式 */
.stage-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20rpx;
}

.stage-table .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.stage-table .th,
.stage-table .td {
  flex: 1;
  padding: 10rpx;
  text-align: center;
  font-size: 28rpx;
}

.stage-table .th {
  color: var(--secondary-text);
  font-weight: bold;
  background-color: var(--light-bg);
}

.current-stage {
  background-color: rgba(68, 114, 196, 0.1);
  font-weight: bold;
}

/* 课程安排样式 */
.progress-container {
  padding: 20rpx;
  background-color: var(--card-bg);
  margin-bottom: 20rpx;
}

.progress {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.progress .label {
  font-size: 28rpx;
  color: var(--secondary-text);
  margin-right: 10rpx;
}

.progress .progress-value {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.progress-bar-container {
  position: relative;
  margin: 20rpx 0;
}

.progress-bar-container progress {
  border-radius: 10rpx;
}

.progress-percent {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: var(--primary-color);
}

/* 课程表格样式 */
.course-table {
  width: 100%;
  border-collapse: collapse;
}

.course-table .tr {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.course-table .th,
.course-table .td {
  flex: 1;
  padding: 10rpx;
  text-align: center;
  font-size: 26rpx;
  word-break: break-all;
}

.course-table .th {
  color: var(--secondary-text);
  font-weight: bold;
  background-color: var(--light-bg);
}

.today-course {
  background-color: rgba(68, 114, 196, 0.1);
  font-weight: bold;
}

.course-status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.status-completed {
  color: var(--success-color);
  background-color: rgba(9, 187, 7, 0.1);
}

.status-pending {
  color: var(--warning-color);
  background-color: rgba(255, 184, 0, 0.1);
}

.action-button {
  display: inline-block;
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  background: none;
  border: none;
  line-height: 1.5;
}

.text-warning {
  color: var(--warning-color);
}

.text-success {
  color: var(--success-color);
}

.action-button::after {
  border: none;
}

/* 切换按钮样式 */
.toggle-button {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  color: var(--primary-color);
  font-size: 28rpx;
  border-top: 1rpx solid var(--border-color);
}

.toggle-button .iconfont {
  margin-left: 10rpx;
  font-size: 24rpx;
}

/* 无课程提示 */
.no-courses {
  padding: 30rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}


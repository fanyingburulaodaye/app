  margin-right: 10rpx;
}

.progress .progress-value {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.progress-bar-container {
  position: relative;
  margin: 20rpx 0;
}

.progress-bar-container progress {
  border-radius: 10rpx;
}

.progress-percent {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);

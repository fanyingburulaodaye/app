}

/* 学习阶段表格样式 */
.stage-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20rpx;
}

.stage-table .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.stage-table .th,

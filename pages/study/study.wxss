  flex: 1;
  padding: 10rpx;
  text-align: center;
  font-size: 28rpx;
}

.stage-table .th {
  color: var(--secondary-text);
  font-weight: bold;
  background-color: var(--light-bg);
}

.current-stage {
  background-color: rgba(68, 114, 196, 0.1);
  font-weight: bold;
}

/* 课程安排样式 */
.progress-container {
  padding: 20rpx;
  background-color: var(--card-bg);
  margin-bottom: 20rpx;
}

.progress {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.progress .label {
